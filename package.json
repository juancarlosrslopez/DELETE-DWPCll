{
  "name": "projnotes-2023a-class",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "NODE_ENV=production PORT=3000 APP_URL='http://localhost' DEBUG=projnotes node ./dist/bin/www",
    "dev": "NODE_ENV=development PORT=3000 APP_URL='http://localhost' DEBUG=projnotes babel-watch --watch ./server/views ./server/bin/www",
    "devc": "NODE_ENV=development webpack serve --config ./webpack.dev.config.js --mode development",
    "build": "npm run buildc && npm run builds",
    "builds": "npm run clean && babel ./server --out-dir dist --copy-files",
    "buildc": "npm run cleanc && webpack --config ./webpack.config.js --mode production",
    "clean": "rm -rf ./dist",
    "cleanc": "rm -f ./public/bundle.js ./public/styles/app.css",
    "lint:c": "eslint ./client/**/*.js",
    "lint:s": "eslint ./server/**/*.js",
    "clean:logs": "rm -rf ./server/logs/*.log"
  },
  "dependencies": {
    "app-root-path": "^3.1.0",
    "babel": "^6.23.0",
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "dotenv": "^16.3.1",
    "express": "~4.16.1",
    "express-handlebars": "^7.1.2",
    "handlebars": "^4.7.8",
    "hbs": "~4.0.4",
    "http-errors": "~1.6.3",
    "materialize-css": "^1.0.0-rc.2",
    "mongoose": "^7.6.3",
    "morgan": "~1.9.1",
    "node-modules": "^1.0.1",
    "path": "^0.12.7",
    "webpack": "^5.76.1",
    "webpack-cli": "^5.0.1",
    "webpack-dev-middleware": "^6.1.1",
    "webpack-dev-server": "^4.11.1",
    "webpack-hot-middleware": "^2.25.4",
    "winston": "^3.8.2",
    "yup": "^1.3.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.22.15",
    "@babel/core": "^7.22.17",
    "@babel/eslint-parser": "^7.22.15",
    "@babel/node": "^7.22.15",
    "@babel/preset-env": "^7.22.15",
    "babel-loader": "^9.1.3",
    "babel-watch": "^7.8.1",
    "core-js": "^3.32.2",
    "css-loader": "^6.8.1",
    "eslint": "^8.50.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-webpack-plugin": "^4.0.1",
    "mini-css-extract-plugin": "^2.7.6"
  }
}
